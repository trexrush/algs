---
import Navbar from "../../layouts/Navbar.astro";
import Page from "../../layouts/Page.astro";

let pages = [
  { name: "Full PLL (wip)", href: "/algs/mega/megaPLL" },
  { name: "Full OLL (wip)", href: "/algs/mega/megaOLL" },
]
---

<Page>
  <Navbar slot="navbar" />
  <main>
    <div class="flex flex-col items-center">
      <h1 class="text-4xl mt-10">Megaminx Algs</h1>
      <br>
      <div class="flex flex-col rounded-md shadow-lg divide-y-2 divide-stone-400/20 bg-stone-200 items-center text-center text-3xl text-stone-700 [&>*]:w-full [&>*]:px-3 [&>*]:py-1">
        {pages.map(page => (
          <a href={page.href} class="hover:font-semibold">{page.name}</a>
        ))}
      </div>
    </div>
  </main>
</Page>

